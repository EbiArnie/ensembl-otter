#!/usr/bin/perl -Tw

# Author:        jgrg
# Group:         anacode
# Maintainer:    jgrg

use strict;
use warnings;

BEGIN { use lib ($ENV{OTTER_PERL_INC} || q{}) =~ m{([^:]+)}g }
use SangerPaths qw{ core bioperl123 ensembl65 otter70 };

use Bio::Otter::ServerScriptSupport;
use Bio::Otter::Server::Slice;

sub get_assembly_dna {
    my ($server) = @_;

    my $params = $server->require_arguments(@Bio::Otter::Server::Slice::REQUIRED_PARAMS);
    my $slice = Bio::Otter::Server::Slice->new($server, $params);

    return $slice->get_assembly_dna;
}

Bio::Otter::ServerScriptSupport->send_response(\&get_assembly_dna);

__END__

=head1 NAME - get_assembly_dna

=head1 AUTHOR

Ana Code B<email> anacode@sanger.ac.uk

