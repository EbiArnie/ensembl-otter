#!/usr/bin/perl -Tw

# Author:        anacode
# Group:         anacode
# Maintainer:    anacode

use strict;
use warnings;

BEGIN { use lib ($ENV{OTTER_PERL_INC} || q{}) =~ m{([^:]+)}g }
use SangerPaths qw{ core bioperl123 ensembl74 otter79 };

use Bio::Otter::Server::Support::Web;
use Bio::Otter::ServerAction::TSV::LoutreDB;

sub get_db_info {
    my ($server) = @_;
    my $tsv = Bio::Otter::ServerAction::TSV::LoutreDB->new($server)->get_db_info;
    return $server->otter_wrap_response($tsv);
}

Bio::Otter::Server::Support::Web->send_response(\&get_db_info);

__END__

=head1 NAME - get_db_info

=head1 AUTHOR

Ana Code B<email> anacode@sanger.ac.uk

