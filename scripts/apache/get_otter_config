#!/usr/local/bin/perl -Tw

# Author:        jgrg
# Group:         anacode
# Maintainer:    jgrg

use strict;
use warnings;

use SangerPaths qw{ core bioperl123 ensembl61 otter54 };

use Bio::Otter::ServerScriptSupport;

{
    my $server = Bio::Otter::ServerScriptSupport->new;
    my $otter_config = $server->data_dir . "/otter_config";
    open my $CFG_FH, '<', $otter_config or
        $server->error_exit("Error getting otter_config\nCan't read '$otter_config' : $!");
    local $/ = undef;
    my $ace_txt = <$CFG_FH>;
    $server->send_response($ace_txt);
    close $CFG_FH;  # Too late for error to client
}







__END__

=head1 NAME - get_otter_config

=head1 AUTHOR

James Gilbert B<email> jgrg@sanger.ac.uk

