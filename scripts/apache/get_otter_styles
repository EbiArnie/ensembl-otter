#!/usr/local/bin/perl -Tw

# Author:        gr5
# Group:         anacode
# Maintainer:    gr5

use strict;
use warnings;

use SangerPaths qw{ core bioperl123 ensembl58 otter54 };

use Bio::Otter::ServerScriptSupport;

{
    my $server = Bio::Otter::ServerScriptSupport->new;
    my $otter_styles = $server->data_dir . "/otter_styles.ini";
    open my $STYLES_FH, '<', $otter_styles or
        $server->error_exit("Error getting otter_styles\nCan't read '$otter_styles' : $!");
    local $/ = undef;
    my $txt = <$STYLES_FH>;
    $server->send_response($txt);
    close $STYLES_FH;  # Too late for error to client
}




__END__

=head1 NAME - get_otter_styles

=head1 AUTHOR

Graham Ritchie B<email> gr5@sanger.ac.uk



