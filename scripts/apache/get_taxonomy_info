#!/usr/bin/perl -Tw

use strict;
use warnings;

BEGIN { use lib ($ENV{OTTER_PERL_INC} || q{}) =~ m{([^:]+)}g }
use SangerPaths qw{ core bioperl123 otter };
use Bio::Otter::Git qw{ :server_ensembl :match };

use Bio::Otter::Server::Support::Web;
use Bio::Otter::ServerAction::TSV::AccessionInfo;

Bio::Otter::Server::Support::Web->send_response(
    sub {
        my ($server) = @_;
        my $tsv = Bio::Otter::ServerAction::TSV::AccessionInfo->new($server)->get_taxonomy_info;
        return $tsv;
    });
