#!/usr/bin/perl -Tw

# Author:        jgrg
# Group:         anacode
# Maintainer:    jgrg

use strict;
use warnings;

BEGIN { use lib ($ENV{OTTER_PERL_INC} || q{}) =~ m{([^:]+)}g }
use SangerPaths qw{ core bioperl123 ensembl72 otter78 };

use Bio::Otter::Server::Support::Web;
use Bio::Otter::ServerAction::XML::Region;

sub lock_region {
    my ($server) = @_;

    my $sa_region = Bio::Otter::ServerAction::XML::Region->new_with_slice($server);
    my $xml = $sa_region->lock_region;

    return $xml;
}

Bio::Otter::Server::Support::Web->send_response(\&lock_region);
