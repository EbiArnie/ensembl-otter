#!/usr/bin/perl -Tw

# Author:        jgrg
# Group:         anacode
# Maintainer:    jgrg

use strict;
use warnings;

BEGIN { use lib ($ENV{OTTER_PERL_INC} || q{}) =~ m{([^:]+)}g }
use SangerPaths qw{ core bioperl123 ensembl70 otter75 };

use Bio::Otter::ServerScriptSupport;
use Bio::Otter::ServerAction::Region;

sub lock_region {
    my ($server) = @_;

    my $params = $server->require_arguments(@Bio::Otter::ServerAction::Region::REQUIRED_PARAMS);
    $params->{cl_host} = $server->param('hostname') || $ENV{REMOTE_ADDR};

    my $sa_region = Bio::Otter::ServerAction::Region->new_with_slice($server, $params);

    return $sa_region->lock_region;
}

Bio::Otter::ServerScriptSupport->send_response(\&lock_region);
