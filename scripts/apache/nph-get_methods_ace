### nph-get_methods_ace

use strict;
use warnings;

use SangerPaths qw{ core bioperl123 ensembl57 otter53 };

use Bio::Otter::ServerScriptSupport;

{
    my $server = Bio::Otter::ServerScriptSupport->new;
    my $methods_ace = $server->data_dir . "/methods.ace";
    open my $ACE_FH, '<', $methods_ace or
        $server->error_exit("Error getting methods.ace\nCan't read '$methods_ace' : $!");
    local $/ = undef;
    my $ace_txt = <$ACE_FH>;
    $server->send_response($ace_txt);
    close $ACE_FH;  # Too late for error to client
}




__END__

=head1 NAME - nph-get_methods_ace

