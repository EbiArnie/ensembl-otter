#!/usr/local/bin/perl -w

unless ( $ARGV[0] ){
  die "\nNeed to enter release date of this database, eg, 2005_10_11\n\n";
}

#-----------------------------------------------
# Mailing list (contains estdb mailing list *)
#-----------------------------------------------

my @emails = qw(
Blumberg@uci.edu
EALindquist@lbl.gov
aaron.zorn@chmcc.org
christophe.klopp@toulouse.inra.fr
ck1@sanger.ac.uk
dg1@sanger.ac.uk
ea3@mole.bio.cam.ac.uk
ealindquist@lbl.gov
gerhardd@mail.nih.gov
jgrg@sanger.ac.uk
jim@gurdon.cam.ac.uk
jkb@sanger.ac.uk
jla1@sanger.ac.uk
jrh@sanger.ac.uk
kj2@sanger.ac.uk
m.gilchrist@gurdon.cam.ac.uk
np209@cam.ac.uk
np209@mole.bio.cam.ac.uk
pbbrokstein@lbl.gov
rgt@sanger.ac.uk
rmd@sanger.ac.uk
simon.hubbard@umist.ac.uk
